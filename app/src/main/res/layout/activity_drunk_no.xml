<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg"
    android:paddingTop="7dp"
    tools:context=".Drunk_No_Activity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/harmonyfont"
        android:text="운행 제한 해제"
        android:textColor="#00FF00"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="254dp"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginRight="0dp"
        android:scaleX="2.2"
        android:scaleY="2.2"
        app:srcCompat="@drawable/tl_green" />

    <LinearLayout
        android:layout_width="490dp"
        android:layout_height="240dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/border_layout"
        android:backgroundTint="#fff"
        android:orientation="vertical">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:textColor="#000000"
            android:text="운행 제한이 해제되었습니다.\n확인 버튼을 누르시면 앱이 종료됩니다."
            android:fontFamily="@font/harmonyfont"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal"
            android:layout_gravity="center"/>

        <androidx.appcompat.widget.AppCompatButton
            android:background="@drawable/custom_btn3"
            android:layout_height="30dp"
            android:layout_width="90dp"
            android:textSize="10sp"
            android:textColor="#FFFFFF"
            android:text="확인"
            android:fontFamily="@font/harmonyfont"
            android:id="@+id/btn_app_close"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:shadowRadius="5"
            android:shadowDy="0"
            android:shadowDx="0"
            android:shadowColor="#A8A8A8" />


    </LinearLayout>

</RelativeLayout>