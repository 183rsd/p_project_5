<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg"
    tools:context=".Alcohol_Detected_Activity">


    <LinearLayout
        android:id="@+id/layout_user_in_alcohol_detect"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp"
        android:layout_centerInParent="true"
        android:background="@drawable/border_layout"
        android:backgroundTint="#fff"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_alcohol_detect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="- 음주 감지 -\n운행이 제한되었습니다.\n본인 확인 후 테스트를 진행해주세요. "/>


        <ImageView
            android:id="@+id/iv_camera"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/no_profile"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_image_analysis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/custom_btn2"
            android:layout_marginTop="30dp"
            android:enabled="false"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="다음"
            android:textColor="#FFFFFF"
            android:textSize="10sp" />



    </LinearLayout>


</RelativeLayout>