<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg"
    android:paddingTop="7dp"
    tools:context=".StepActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/harmonyfont"
        android:text="보폭 분석"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="490dp"
        android:layout_height="240dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/border_layout"
        android:backgroundTint="#fff"
        android:orientation="vertical"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_step_load"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:fontFamily="@font/harmonyfont"
                android:text="측정한 보폭 데이터를 불러오는 중..."
                android:textColor="@color/black"
                android:textSize="30sp" />
            <TextView
                android:id="@+id/tv_step_analysis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:fontFamily="@font/harmonyfont"
                android:layout_marginTop="20dp"
                android:text="보폭 데이터를 분석하는 중..."
                android:textColor="@color/black"
                android:textSize="30sp"
                android:visibility="invisible"/>
            <TextView
                android:id="@+id/tv_step_analysis_finish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:fontFamily="@font/harmonyfont"
                android:layout_marginTop="20dp"
                android:text="분석 완료!\n잠시 후 결과 화면으로 이동합니다."
                android:textColor="@color/black"
                android:textSize="20sp"
                android:visibility="invisible"/>


        </LinearLayout>

    </ScrollView>

</RelativeLayout>